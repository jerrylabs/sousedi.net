---
const { title, description, className , ogTitle, ogUrl, ogImage, ogType, ogDesription} = Astro.props;
import Header from '../components/RetroHeader.astro'
// import Footer from '../components/Footer.astro'
---

<!DOCTYPE html>
<html lang="cs">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description}>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    {ogTitle && <meta property="og:title" content={ogTitle} />}
    {ogUrl && <meta property="og:url" content={ogUrl} />}
    {ogImage && <meta property="og:image" content={ogImage} />}
    {ogType && <meta property="og:type" content={ogType} />}
    {ogDesription && <meta property="og:description" content={ogDesription} />}
    <title>{title}</title>
  </head>
  <body>
    <div class={`container ${className || ''}`}>
      <Header />
      <slot />
      <!-- <Footer /> -->
    </div>
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@500');
  html, body {
    margin: 0;
    padding: 0;
    font-family: 'Montserrat';
  }

  body {
    background-color: #00336e;
    background-image: url('/img/okna02.png'), url('/img/okna01.png');
    background-position: center center;
  }

  .container {
    max-width: 80rem;
    width: 80%;
    margin: auto;
    box-sizing: border-box;
    padding: 0 1rem;
    background: white;
    min-height: 100vh;
  }

  h1, h2, h3 { margin: 0 0 1.5rem; font-weight: 500; }
  h3 { margin-bottom: 1rem; }
  ul { margin: 0; }
  section { padding: 2rem 0; outline: none !important; }
  section ul { margin-bottom: 1rem; }


  p { max-width: 40rem; margin: 0 0 1rem; }
  p.center { margin-left: auto; margin-right: auto; }
  p.big { margin-top: 1rem; margin-bottom: 1rem; max-width: 45rem; }
  @media (min-width: 750px) {  p.big {font-size: 120%; } }
  @media (max-width: 999px) { p.big { margin: 1rem auto; text-align: center; } }
  p.SRLCaption { max-width: none; }

  .hidden { display: none; }
  .nowrap { white-space: nowrap; }
  .center { text-align: center; }
  .nomargin { margin: 0; }
  button { padding: 0; border: none; background: none; }


</style>
