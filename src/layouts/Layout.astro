---
const {
  title = 'Sousedi.net',
  description = 'Spoluobčané se společným zájmem o kultivaci veřejného prostoru, zlepšování kvality života a rozvoj demokratické společnosti',
  className,
  ogTitle,
  ogImage,
  ogType,
  ogDescription
} = Astro.props;
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

---

<!DOCTYPE html>
<html lang="cs">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description}>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="author" content="JerryLabs" />
    <meta property="og:title" content={ogTitle || title} />
    <meta property="og:url" content={Astro.url.pathname} />
    <meta property="og:image" content={ogImage || '/img/retro/logo-sousedi.svg'} />
    <meta property="og:type" content={ogType || 'website'} />
    <meta property="og:description" content={ogDescription || description} />
    <title>{title}</title>
  </head>
  <body>
    <div class={`layout${className ? ` ${className}` : ''}`}>
      <Header />
      <div class="layout__content">
        <slot />
      </div>
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;500');
  html, body {
    margin: 0;
    padding: 0;
    font-family: 'Montserrat';
    font-weight: 300;
    background-color: white;
    font-size: 16px;
  }

  @media (max-width: 800px) {
    html {font-size: 80%; }
  }
  @media (max-width: 600px) {
    html { font-size: 70%; }
  }
  @media (max-width: 400px) {
    html { font-size: 60%; }
  }

  .container {
    max-width: 75rem;
    width: 100%;
    margin: auto;
    box-sizing: border-box;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .layout {
    min-height:  100vh;
    display: flex;
    flex-direction: column;
  }

  .layout__content {
    flex: 1 0 100%;
  }

  main {
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
  }

  h1, h2, h3 { margin: 0 0 1.5rem; font-weight: 500; }
  h3 { margin-bottom: 1rem; }
  ul { margin: 0; }
  section { padding: 2rem 0; outline: none !important; }
  section ul { margin-bottom: 1rem; }

  .hidden { display: none; }
  .nowrap { white-space: nowrap; }
  .center { text-align: center; }
  .nomargin { margin: 0; }
  button { padding: 0; border: none; background: none; }


</style>
